<div class="container">
  <div class="row">
    <div class="span2"></div>
    <div class="span8">
      <div class="well well-small wellBlue text-center">
        <% provide(:title, 'All users') %>
		<h1>All users</h1>
      </div>
      <div class="well well-small text-center wellBlue"> 
      		<%= will_paginate @users %> 
			<table class="table table-hover"> 
			  <thead>
			    <tr>
			      <th>First Name</th>
			      <th>Last Name</th>
			      <th>Username</th>
			      <th>Email</th>
			      <th>Birth Date</th>
			    </tr>
			  </thead>
			  <tbody>
			  <% @users.each do |user| %>
			  	<%if user.username != current_user.username%>
			  	<tr>
			  		<td><%= user.first_name%></td>
			  		<td><%= user.last_name%></td>
			  		<td><%= user.username%></td>
			  		<td><%= user.email%></td>
			  		<td><%= user.birth%></td>
			  		<td>
			  		<% if current_user.username == "administrator" %>
    				   <%= button_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
					  <% end %>	
					</td>
			  	</tr>
			  	<%end%>
			  <% end %>
			  </tbody>
			  </table>
			  <%= will_paginate @users %>
	</div>
	<div class="span2"></div>
	</div>
	</div>
	</div>
</div>