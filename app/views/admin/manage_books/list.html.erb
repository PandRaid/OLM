<div class="container">
  <div class="row">
    <div class="span2"></div>
    <div class="span8">
      <div class="well well-small wellBlue text-center">
        <% provide(:title, 'All users') %>
		<h1>All books [<a href="/upload/fileform">Add</a>]</h1>
      </div>
      <div class="well well-small text-center wellBlue">
      		<%= will_paginate @books %>
			<table class="table table-hover">
			  <thead>
			    <tr>
			      <th>Title</th>
			      <th>Author</th>
			    </tr>
			  </thead>
			  <tbody>
			  <% @books.each do |book| %>
			  	<tr>
			  		<td><%= book.title %></td>
			  		<td><%= book.author %></td>
			  		<td>
			  		<% if current_user.username == "administrator" %>
    				   <form action="/admin/manage_books/delete" class="button_to" method="post"><div><input name="id" value="<%= book.id %>" type="hidden"><input data-confirm="You sure?" value="delete" type="submit"><input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden"></div></form>
					  <% end %>
					</td>
			  	</tr>
			  <% end %>
			  </tbody>
			  </table>
			  <%= will_paginate @books %>
	</div>
	<div class="span2"></div>
	</div>
	</div>
	</div>
</div>
