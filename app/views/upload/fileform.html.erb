<div class="container">
  <div class="row">
    <div class="span2"></div>
    <div class="span8">
      <div class="well well-small wellBlue">
        <h3 class="text-center">Upload to OLM</h3>
      </div>
      <div class="well well-small text-center wellBlue">
	<%= form_tag("/upload/fileupload", multipart: true)  do %>

	<div id="user_nav">
		  <% if @badForm==true %>
	      	<ul>
	          <div class="alert alert-error">
	            <button type="button" class="close" data-dismiss="alert">&times;</button>
	            <strong>Warning!</strong>
	            <ul>
	                <p>You did not include all of the required fields!</p>
	      	    </ul>
	      	  </div>
	      <%end%>
			<% if flash[:notice] %>
			<div class="alert"><%= flash[:notice] %></div>
			<% end %>
		  <div class="field">
		    <%= label_tag :title %>
		    <%= text_field_tag :title, params[:title] %>
		  </div>
		  <div class="field">
		    <%= label_tag :author %>
		    <%= text_field_tag :author, params[:author] %>
		  </div>
		  <div class="field">
		    <%= label_tag :cover %>
		  	<%= file_field_tag 'cover' %>
		  </div>
		  <div class="field">
		    <%= label_tag "book" %>
		  	<%= file_field_tag 'book' %>
		  </div>
		  <div class="actions"><%= submit_tag "Upload File" %></div>

	  <% end %>
	</div>
	<div class="span2"></div>
	</div>
	</div>
	</div>
</div>
